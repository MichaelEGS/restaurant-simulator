{
  "name": "restaurant-simulator",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watchAll",
    "build": "mkdir -p dist && cp -r *.html *.css modulos data.json dist/",
    "dev": "live-server --port=3000",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "jest": {
    "collectCoverageFrom": ["modulos/**/*.js"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "live-server": "^1.2.0"
  }
}